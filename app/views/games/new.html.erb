<div class="street-view">
  <div id="map-canvas" style="width:100%; height:450px" data-id="
    <%= @location.id %>">
  </div>
</div>

<div class="ui black button">Guess</div>

<div class="ui basic modal">
  <div class="header" style="text-align:center">
    Where are you?  Place the pin on the map.
  </div>
  <div id="map" style="width:100%; height:450px;"></div>
  <div class="actions">
    <div id="guess">
       <%= form_for(@game) do |f| %>
       <%= f.hidden_field :location_id, class: "locaty", value: @location.id %>
       <%= f.hidden_field :lat_guess, class: "latty" %>
       <%= f.hidden_field :lng_guess, class: "longty" %>
       <%= f.submit "Guess", class: "large ui teal basic fluid inverted button" %>
       <% end %>
    </div>
    <div>
      <%= link_to "Go home", root_path, class:"large ui pink basic fluid inverted button" %>
    </div>
  </div>
</div>



